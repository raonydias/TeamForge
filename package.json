{
  "name": "teamforge",
  "private": true,
  "workspaces": [
    "server",
    "client"
  ],
  "scripts": {
    "dev": "concurrently \"tsx server/src/index.ts\" \"npm --workspace client run dev\"",
    "db:generate": "npm --workspace server run db:generate",
    "db:migrate": "npm --workspace server run db:migrate",
    "build": "npm --workspace client run build && npm --workspace server run build"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "tsx": "^4.19.2",
    "typescript": "^5.6.3"
  }
}